# OpenAI API 설정 (Render에서 환경변수로 설정)
OPENAI_API_KEY=your_openai_api_key_here

# 서버 설정
PORT=10000
NODE_ENV=production

# 파일 업로드 설정
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# CORS 설정 (Render URL로 변경 필요)
CORS_ORIGIN=https://your-app-name.onrender.com

# 결제 API 설정
# 카카오페이 (https://developers.kakao.com/console/app/491421/config/payment)
KAKAO_PAY_ADMIN_KEY=your_kakao_pay_admin_key_here

# 토스페이먼츠 (https://developers.tosspayments.com/)
TOSS_SECRET_KEY=your_toss_secret_key_here

# 해외 결제 API 설정
# PayPal (https://developer.paypal.com/)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# Stripe (https://stripe.com/docs/api)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
